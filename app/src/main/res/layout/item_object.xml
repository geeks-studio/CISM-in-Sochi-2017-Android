<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/io_root_view"
    android:layout_width="match_parent"
    android:layout_height="156dp"
    android:background="@android:color/white"
    android:foreground="?selectableItemBackground">
    <ImageView
        android:id="@+id/io_iv_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@null"
        android:scaleType="fitXY" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/shadow" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/io_tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white"
            tools:text="Многофункциональная арена"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/io_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:layout_marginTop="8dp"
            tools:text="Ледяной куб"
            android:textAllCaps="true"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@android:color/white"
                android:layout_marginTop="8dp"
                android:text="@string/label_what_happened"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/io_tv_happened"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:textColor="@android:color/white"
                android:layout_marginTop="8dp"
                tools:text="Ледяной куб"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@android:color/white"
                android:layout_marginTop="8dp"
                android:text="@string/label_capacity"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/io_tv_capacity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@android:color/white"
                android:layout_marginTop="8dp"
                tools:text="3000 зрителей"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>